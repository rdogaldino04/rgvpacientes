<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="Galdino">
        <createTable tableName="patients">
            <column name="cpf" type="varchar(11)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false" />
            </column>
            <column name="phone" type="varchar(30)"> </column>
            <column name="address_name" type="varchar(300)" />
            <column name="address_number" type="varchar(30)" />
            <column name="address_complement" type="varchar(100)" />
            <column name="address_district" type="varchar(100)" />
        </createTable>
    </changeSet>
</databaseChangeLog>